<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">
      <%= @game.emojis[params[:r].to_i] %>
    </div>  
    <div class="flexbox horizontal stretch">
      <form action="<%= game_path(@game, params: { r: params[:r]}) %>" id="game_play_no" method="POST" enctype="multipart/form-data" class="flexbox vertical start">
        <div style="hidden">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input name="_method" type="hidden" value="patch" />
        </div>
        <div style="display:none">
          <input name="game[response]" value="0">
        </div>  
        <input id="game_play_no_submit" name="commit" type="submit" class="button" value="Yuck" tabindex="1">
      </form>
      <form action="<%= game_path(@game, params: { r: params[:r]}) %>" id="game_play_yes" method="POST" enctype="multipart/form-data" class="flexbox vertical start">
        <div style="hidden">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input name="_method" type="hidden" value="patch" />
        </div>
        <div style="display:none">
          <input name="game[response]" value="1">
        </div>
        <input id="game_play_yes_submit" name="commit" type="submit" class="button" value="Yum" tabindex="2">
      </form>
    </div>
	</div>
</div>