<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="screen-title flexbox vertical center">
      Is it Edible?
    </div>
    <div class="game-round flexbox vertical center">
      Round <%= params[:r].to_i+1 %>
    </div>
    <div class="playable-emoji flexbox vertical center">
      <%= @game.emojis[params[:r].to_i] %>
    </div>
    <div class="flexbox vertical center">
      <div class="flexbox horizontal stretch">
        <form action="<%= game_path(@game, params: { r: params[:r]}) %>" method="POST" enctype="multipart/form-data" class="flexbox vertical start">
          <div style="hidden">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input name="_method" type="hidden" value="patch" />
          </div>
          <div style="display:none">
            <input name="game[response]" value="0">
          </div>  
          <input id="game_play_no" name="commit" type="submit" class="button" value="Yuck" tabindex="1">
        </form>
        <form action="<%= game_path(@game, params: { r: params[:r]}) %>" method="POST" enctype="multipart/form-data" class="flexbox vertical start">
          <div style="hidden">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input name="_method" type="hidden" value="patch" />
          </div>
          <div style="display:none">
            <input name="game[response]" value="1">
          </div>
          <input id="game_play_yes" name="commit" type="submit" class="button" value="Yum" tabindex="2">
        </form>
      </div>
    </div>
	</div>
</div>